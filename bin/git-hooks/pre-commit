#! /bin/zsh

pretty_print() {
  echo "\033[91m\n*** $1 ***\033[0m"
}

check() {
  if [ $? -ne 0 ]
  then
    pretty_print "$1"
    exit 1
  fi
}

check_unstaged_files() {
  if [[ -n $(git diff) ]]
  then
    return 1
  fi
}

check_unstaged_files
check "Unstaged Files"

git push 
check "Updates Available"

npm run lint
check "Linting Errors"

npm run build
check "Build Error"
